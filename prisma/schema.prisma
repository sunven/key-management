// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DIRECT_URL")
  directUrl = env("DIRECT_URL")
}

// Users table (synced from NextAuth)
model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  image     String?
  createdAt DateTime   @default(now()) @map("created_at")
  providers Provider[]
  groups    Group[]

  @@map("users")
}

// Providers table
model Provider {
  id          Int      @id @default(autoincrement())
  userId      Int      @map("user_id")
  baseUrl     String   @map("base_url")
  name        String
  description String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokens      Token[]

  @@map("providers")
}

// Tokens table
model Token {
  id          Int      @id @default(autoincrement())
  providerId  Int      @map("provider_id")
  token       String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")
  provider    Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@map("tokens")
}

// Groups table - independent from Provider-Token system
model Group {
  id          Int         @id @default(autoincrement())
  userId      Int         @map("user_id")
  name        String
  description String?
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @default(now()) @updatedAt @map("updated_at")
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       GroupItem[]

  @@map("groups")
}

// Group Items table - key-value pairs within a group
model GroupItem {
  id        Int       @id @default(autoincrement())
  groupId   Int       @map("group_id")
  key       String
  value     String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at")
  group     Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)
  tags      ItemTag[]

  @@unique([groupId, key])
  @@map("group_items")
}

// Item Tags table - tags for group items
model ItemTag {
  id        Int       @id @default(autoincrement())
  itemId    Int       @map("item_id")
  tag       String
  createdAt DateTime  @default(now()) @map("created_at")
  item      GroupItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([tag])
  @@map("item_tags")
}
