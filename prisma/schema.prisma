// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Users table (synced from NextAuth)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now()) @map("created_at")
  groups    Group[]
  shares    Share[]

  @@map("users")
}

// Groups table
model Group {
  id          Int         @id @default(autoincrement())
  userId      Int         @map("user_id")
  name        String
  description String?
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @default(now()) @updatedAt @map("updated_at")
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       GroupItem[]
  share       Share?

  @@map("groups")
}

// Group Items table - key-value pairs within a group
model GroupItem {
  id        Int       @id @default(autoincrement())
  groupId   Int       @map("group_id")
  key       String
  value     String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at")
  group     Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)
  tags      ItemTag[]

  @@unique([groupId, key])
  @@map("group_items")
}

// Item Tags table - tags for group items
model ItemTag {
  id        Int       @id @default(autoincrement())
  itemId    Int       @map("item_id")
  tag       String
  createdAt DateTime  @default(now()) @map("created_at")
  item      GroupItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([tag])
  @@map("item_tags")
}

// Share type enum
enum ShareType {
  PUBLIC
  PRIVATE
}

// Invitation status enum
enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

// Shares table - for sharing groups
model Share {
  id          String            @id @default(cuid())
  userId      Int               @map("user_id")
  groupId     Int               @unique @map("group_id")
  type        ShareType
  createdAt   DateTime          @default(now()) @map("created_at")
  updatedAt   DateTime          @updatedAt @map("updated_at")
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  group       Group             @relation(fields: [groupId], references: [id], onDelete: Cascade)
  invitations ShareInvitation[]

  @@index([userId])
  @@map("shares")
}

// Share invitations table - for private share invitations
model ShareInvitation {
  id          Int              @id @default(autoincrement())
  shareId     String           @map("share_id")
  email       String
  status      InvitationStatus @default(PENDING)
  invitedAt   DateTime         @default(now()) @map("invited_at")
  respondedAt DateTime?        @map("responded_at")
  share       Share            @relation(fields: [shareId], references: [id], onDelete: Cascade)

  @@unique([shareId, email])
  @@index([email])
  @@map("share_invitations")
}
